{
  "name": "Python 3",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13",
  "forwardPorts": [8000],
  "postCreateCommand": "pip install -r requirements.txt",
  "postStartCommand": "echo 'CLAUDE_SONNET_3_5_ENABLED=1' >> /etc/environment",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  }
}
